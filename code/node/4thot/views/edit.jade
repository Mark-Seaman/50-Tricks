extends layout

block title
  title Edit #{id}

block content

  form(method="post", action="/save")
    style input{width:90%}
    input(name='id',   type='text', value='#{id}') 
    ul 
      li 
        input(name='child1', type='text', value='#{child1}') 
      li
        input(name='child2', type='text', value='#{child2}') 
      li
        input(name='child3', type='text', value='#{child3}') 
      li
        input(name='child4', type='text', value='#{child4}') 
    p
      center
        button(class="btn btn-large btn-primary", type="submit", value="Save") Save 
        x= '&nbsp; &nbsp; &nbsp;'
        button(class="btn btn-large", type="cancel", value="Cancel",  name="cancel") Cancel
